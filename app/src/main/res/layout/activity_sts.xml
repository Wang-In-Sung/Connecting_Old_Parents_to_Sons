<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sts1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1) 간병인의 간병 서비스에 대해 만족하십니까?"
                android:textSize="22sp"
                tools:ignore="MissingConstraints" />
            <RadioGroup
                android:id="@+id/sradioGroup1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <RadioButton
                    android:id="@+id/s1Btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매우 그렇다" />
                <RadioButton
                    android:id="@+id/s1Btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="그렇다" />
                <RadioButton
                    android:id="@+id/s1Btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="그렇지 않다" />
                <RadioButton
                    android:id="@+id/s1Btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매우 그렇지 않다" />
            </RadioGroup>


            <TextView
                android:id="@+id/sts2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2) 간병인의 연락 주기가 일정하다."
                android:textSize="22sp"
                tools:ignore="MissingConstraints" />
            <RadioGroup
                android:id="@+id/sradioGroup2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <RadioButton
                    android:id="@+id/s2Btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매우 그렇다" />
                <RadioButton
                    android:id="@+id/s2Btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="그렇다" />
                <RadioButton
                    android:id="@+id/s2Btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="그렇지 않다" />
                <RadioButton
                    android:id="@+id/s2Btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매우 그렇지 않다" />
            </RadioGroup>

            <TextView
                android:id="@+id/sts3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3) 간병인의 케어가 충분하다고 느낀다."
                android:textSize="22sp"
                tools:ignore="MissingConstraints" />
            <RadioGroup
                android:id="@+id/sradioGroup3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <RadioButton
                    android:id="@+id/s3Btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매우 그렇다" />
                <RadioButton
                    android:id="@+id/s3Btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="그렇다" />
                <RadioButton
                    android:id="@+id/s3Btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="그렇지 않다" />
                <RadioButton
                    android:id="@+id/s3Btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매우 그렇지 않다" />
            </RadioGroup>

            <TextView
                android:id="@+id/sts4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4) 앞으로의 개선 방안을 적어주세요. ( 최대 100자 )"
                android:textSize="22sp"
                tools:ignore="MissingConstraints" />


            <EditText
                android:id="@+id/improvement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />

            <Button
                android:id="@+id/sresBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제출" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>